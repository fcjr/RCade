{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "ES2022"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmitOnError": true
  },
  "include": [
    "src/main/preload.ts",
    "src/shared/**/*"
  ],
  "references": [
    {
      "path": "../sdk"
    },
    {
      "path": "../plugins"
    }
  ],
  "exclude": [
    "node_modules"
  ]
}
