{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "node20",
    "moduleResolution": "node16",
    "lib": [
      "ES2022"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
  },
  "references": [
    {
      "path": "../sdk"
    },
    {
      "path": "../plugins"
    },
    {
      "path": "../api"
    },
  ],
  "include": [
    "src/main/**/*",
    "src/plugins/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/main/preload.ts"
  ]
}
